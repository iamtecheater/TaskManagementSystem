@model Department
@{
    ViewData["Title"] = "Add Department";
}

<h1>Add Department</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDepartment">
            <div class="form-group">
                <label asp-for="Name">New Department Name: </label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Department Description: </label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button class="btn btn-primary" type="submit">Add A Department</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

