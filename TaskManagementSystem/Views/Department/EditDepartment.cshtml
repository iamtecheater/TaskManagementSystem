@model Department
@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDepartment">
            <input type="hidden" asp-for="DepartmentID" />
            <div class="form-group">
                <label asp-for="Name">Department Name: </label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Department Description: </label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit" action="EditTask">Update Department Details</button>
            <a asp-action="Index">Back to Task List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}