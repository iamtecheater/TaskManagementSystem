@model TaskManagementSystem.ViewModels.TaskWithEmpsList
@{
    ViewData["Title"] = "Add Task";
}

<h1 class="display-4">Add Task</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTask">
            <div class="form-group">
                <label asp-for="StartTime">Select Task Start Date: </label>
                <input class="form-control" type="date" asp-for="StartDate" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime">Select Task Start Time: </label>
                <input class="form-control" type="time" asp-for="StartTime" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime">Select Task Finish Date: </label>
                <input class="form-control" type="date" asp-for="EndDate" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime">Select Task Time End: </label>
                <input class="form-control" type="time" asp-for="EndTime" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title">Task Title: </label>
                <input class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Task Description: </label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <p>Please click on the checkbox to assign task to person</p>
            @*@Html.Partial("EmployeesListPartialView")*@
            <partial name="EmployeesListPartialView" />
            <button class="btn btn-primary" type="submit">Add Task</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
